<form class="frm" id="frmLogin">
  <div class="card-login">

    <div class="card-header">
      <h2>Login</h2>
    </div>

    <div class="card-text">

      <div class="inputData">
        <label for="username-login">User Name:</label>
        <input type="text" id="username-login" class="textBox" />
      </div>

      <div class="inputData">
        <label for="password-login">Password:</label>
        <input type="password" id="password-login" class="textBox" />
      </div>

      <div>
        <button type="submit" class="btn">Login</button>
      </div>      

      <div class="left">
        <a href="/signup" class="a-text"> or Sign Up! </a>   
      </div>

    </div>

  </div>
</form>

<script src="/js/login.js"></script>